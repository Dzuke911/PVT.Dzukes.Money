@model UsersManagementModel
@using PVT.Money.Business;
@using PVT.Money.Business.Admin;
@{
    Layout = "MainLayout";
    ViewData["Title"] = "UsersManagement";
}

<br />
<div id="UsersManagementPage" class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading text-center"><h3>Users management</h3></div>
                <div class="panel-body">
                    <form id="UsersManagementForm" asp-action="UsersManagementFormAction" asp-controller="Main">
                        <div class="form-group col-sm-6">
                            <label for="UsersManagementList">Users list:</label>
                            <span asp-validation-for="SelectedUser" class="text-danger small"></span>
                            <select type="text" size="10" class="form-control" asp-for="SelectedUser">
                                @{
                                    foreach (MoneyUser user in Model.Users)
                                    {
                                        <option roleAttr="@user.RoleName">@user.Login</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="UsersRolesList">Role</label>
                            <select type="text" class="form-control" asp-for="NewRole">
                                @{
                                    foreach (UserRole role in Model.Roles)
                                    {
                                        <option value="@role.Name">@role.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-sm-12 text-center small">
                            <span id="UsersManagementMessage">@ViewData["UsersManagementMessage"]</span>
                            <hr />
                        </div>
                        <div class="form-group">
                            <input id="SaveUserButton" class="btn btn-primary form-control" type="submit" name="SaveUser" value="Save user" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<span id="SelectedMenuItem" style="display: none;" value="#UsersManagementLi" />

@section Scripts{

}
