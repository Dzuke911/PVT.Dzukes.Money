@model ExternalLoginModel
@{
    Layout = "AuthorizationLayout";
    ViewData["Title"] = "ExternalLogin";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading text-center"><h3>Complete your sign in</h3></div>
                <div class="panel-body">
                    <form id="ExternalLoginForm" asp-action="ExternalLoginFormAction" asp-controller="Account">
                        <div class="text-danger text-center small">@ViewData["Error"]</div>
                        <div class="form-group">
                            <label><small>Login</small></label>
                            <span asp-validation-for="Login" class="text-danger small"></span>
                            <input type="text" asp-for="Login" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label><small>Email</small></label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <input type="text" asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input id="ContinueButton" class="btn btn-primary form-control" type="submit" name="Continue" value="Continue" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    
}
